$fill = #eeeef3
$highlight = #e34f33

shaded-back-box()
    box-shadow: 0px 1px 5px #666
    background-color: $fill
    border-radius: .5em

shaded-fore-box()
    box-shadow: 0px 1px 3px #666
    background-color: white

.shaded-back-box
    shaded-back-box()

.shaded-fore-box
    shaded-fore-box()

#rules
    shaded-back-box()
    float: left
    white-space: pre

    p
        margin: 2em 1em 2em .5em

#rules-header
    shaded-fore-box()
    margin: 1em 0
    padding: .2em 1em

    h2
        font-family: 'Quando', serif
        color: $highlight
        margin: 0

#puzzle 
    float: left
    margin-left: 1em
    padding: 0

#key-catcher
    position: absolute
    left: -1000em

.puzzle-grid 
    shaded-back-box()
    position: relative
    overflow: auto
    padding: 0

    .puzzle-grid-cell
        shaded-fore-box()
        position: absolute;

        border: 2px $fill solid
        border-radius: .2em

    .puzzle-grid-cell.puzzle-grid-selected
        border: 2px $highlight solid

.puzzle-grid-focused
    border: 1px $highlight solid

    //Compensate for border shift when focused
    position: relative
    left: -1px
    top: -1px

.puzzle-grid-cell-value
    font-size: 16pt
    margin-top: 12px
    margin-left: 17px
